#!/bin/sh

set -e
case "$1" in
    remove|upgrade|deconfigure)
      [ -L /etc/bind/named.conf ] && rm -f /etc/bind/named.conf
      dpkg-divert --package $package_name --divert /etc/bind/named.conf.original --rename --remove /etc/bind/named.conf
      ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
exit 0
