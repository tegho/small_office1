#!/bin/sh

set -e
case "$1" in
    remove|upgrade|deconfigure)
        systemctl disable montana-crl.timer && \
        systemctl stop montana-crl.timer && \
        systemctl disable montana-crl.service && \
        systemctl stop montana-crl.service

        update-rc.d iptables disable
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
exit 0
